<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:fitsSystemWindows="true"
            tools:context="com.webrtc.audioprocessing.MainActivity">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Android WebRTC"
                android:textColor="@color/white"
                android:background="@color/black"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_marginBottom="15dp"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:orientation="horizontal">
            <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="端口:"/>
            <EditText
                    android:id="@+id/etTargetPort"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/edit_text"
                    android:inputType="phone"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:orientation="horizontal">
            <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="IP 地址:"/>
            <EditText
                    android:id="@+id/etTargetIP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/edit_text"
                    android:inputType="phone"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/edit_text"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="18sp"
                        android:text="语音质量"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                <CheckBox
                        android:id="@+id/cbHighPassFilter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="高通滤波器"/>

                <CheckBox
                        android:id="@+id/cbSpeechIntelligibilityEnhance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="语音清晰度增强"/>

                <CheckBox
                        android:id="@+id/cbBeamForming"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:text="Beam Forming"
                />

                <CheckBox
                        android:id="@+id/cbSpeaker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="扬声器"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/edit_text"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="18sp"
                        android:text="回声消除"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                <RadioGroup
                        android:id="@+id/rgAec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <RadioButton
                            android:id="@+id/rbAecPC"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AEC_PC"/>

                    <RadioButton
                            android:id="@+id/rbAecMobile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="AEC_Mobile"/>

                    <RadioButton
                            android:id="@+id/rbAecNone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AEC_None"/>
                </RadioGroup>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                >

                    <LinearLayout
                            android:id="@+id/aecPcView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                        <CheckBox
                                android:id="@+id/cbAecExtendFilter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="AEC 扩展滤波器"/>

                        <CheckBox
                                android:id="@+id/cbDelayAgnostic"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="延迟不可知"
                                android:checked="true"/>

                        <CheckBox
                                android:id="@+id/cbNextGenerationAEC"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="下一代 AEC"/>


                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="vertical">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="AEC PC 模式："/>

                            <RadioGroup
                                    android:id="@+id/rgPcMode"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                <RadioButton
                                        android:id="@+id/rbLowSuppression"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="低抑制"/>

                                <RadioButton
                                        android:id="@+id/rbModerateSuppression"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="中度抑制"/>

                                <RadioButton
                                        android:id="@+id/rbHighSuppression"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="高抑制"
                                        android:checked="true"/>
                            </RadioGroup>
                        </LinearLayout>
                    </LinearLayout>

                    <RadioGroup
                            android:id="@+id/rgMobileMode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:padding="10dp"
                                android:text="AEC Mobile 模式:"/>

                        <RadioButton
                                android:id="@+id/rbQuietEarpieceOrHeadset"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="静音听筒或耳机"/>

                        <RadioButton
                                android:id="@+id/rbEarpiece"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="耳机"/>

                        <RadioButton
                                android:id="@+id/rbLoudEarpiece"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="听筒"/>

                        <RadioButton
                                android:id="@+id/rbSpeakerphone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="扬声器"
                                android:checked="true"/>

                        <RadioButton
                                android:id="@+id/rbLoudSpeakerphone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="大声扬声器"/>

                    </RadioGroup>

                    <LinearLayout
                            android:id="@+id/aecBufferDelayView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical"
                            android:visibility="gone">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="AEC 缓冲区延迟（ms）:"/>

                        <EditText
                                android:id="@+id/etAceBufferDelay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@android:drawable/edit_text"
                                android:ems="3"
                                android:inputType="numberDecimal"
                                android:minWidth="100dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@android:drawable/edit_text"
                android:orientation="vertical">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18sp"
                    android:text="噪声抑制"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

            <CheckBox
                    android:id="@+id/cbNS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="NS"/>

            <CheckBox
                    android:id="@+id/cbExperimentalNs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="实验性的 NS"
                    android:visibility="gone"/>
            <LinearLayout
                    android:id="@+id/nsModeView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NS 模式："/>
                <RadioGroup
                        android:id="@+id/rgNsMode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <RadioButton
                            android:id="@+id/rbLow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="低"/>
                    <RadioButton
                            android:id="@+id/rbModerate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="中等"/>

                    <RadioButton
                            android:id="@+id/rbHigh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="高"
                            android:checked="true"/>

                    <RadioButton
                            android:id="@+id/rbVeryHigh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="极高"/>
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@android:drawable/edit_text"
                android:orientation="vertical">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18sp"
                    android:text="自动增益控制器"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            <CheckBox
                    android:id="@+id/cbAgc"
                    android:checked="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AGC"/>

            <CheckBox
                    android:id="@+id/cbExperimentalAGC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="实验性的 AGC"/>
            <LinearLayout
                    android:id="@+id/agcModeView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AGC 模式："/>
                <RadioGroup
                        android:id="@+id/rgAgcMode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <RadioButton
                            android:id="@+id/rbAdaptiveAnalog"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="自适应模拟信号"/>

                    <RadioButton
                            android:id="@+id/rbAdaptiveDigital"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="自适应数字信号"
                            android:checked="true"/>

                    <RadioButton
                            android:id="@+id/rbFixedDigital"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="固定数字信号"/>
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/agcTlView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AGC 目标档位 [0-31]:"/>
                <EditText
                        android:id="@+id/etAgcTargetLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:drawable/edit_text"
                        android:ems="3"
                        android:hint="请输入 AGC 目标电平"
                        android:inputType="numberDecimal"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/agcCgView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="压缩增益 [0-90]:"/>
                <EditText
                        android:id="@+id/etAgcCompressionGain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:drawable/edit_text"
                        android:ems="3"
                        android:hint="请输入 Compression Gain"
                        android:inputType="numberDecimal"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@android:drawable/edit_text"
                android:orientation="vertical">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18sp"
                    android:text="语音活动检测"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            <CheckBox
                    android:id="@+id/cbVad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VAD"
                    android:checked="true"/>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView
                            android:id="@+id/tvReceivedCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="接收计数: "/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView
                            android:id="@+id/tvSendCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="发送计数: "/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="vertical">
            <Button
                    android:id="@+id/btnStart"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:background="@color/black"
                    android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
